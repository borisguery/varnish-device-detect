varnishtest "Test devicedetect subroutine"

server s1 {
       rxreq
       txresp
} -start

varnish v1 -vcl+backend {
        include "${projectdir}/devicedetect.vcl";
        sub vcl_recv { call devicedetect; }
        sub vcl_deliver {
            set resp.http.X-UA-Device-Type = req.http.X-UA-Device-Type;
            set resp.http.X-UA-Device-OS   = req.http.X-UA-Device-OS;
        }

} -start

client c1 {
        txreq -hdr "User-Agent: Mozilla/5.0 (Linux; U; Android 2.2; nb-no; HTC Desire Build/FRF91) AppleWebKit/533.1 (KHTML, like Gecko) Version/4.0 Mobile Safari/533.1" 
        rxresp
        expect resp.status == 200
}

client c1 -run
